<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mercosul_formato_DNI</fullName>
    <active>true</active>
    <description>Validação do formato do DNI</description>
    <errorConditionFormula>!REGEX( DNI__c , &quot;^([0-9]{2}[\\.][0-9]{3}[\\.][0-9]{3})?$&quot;)</errorConditionFormula>
    <errorDisplayField>DNI__c</errorDisplayField>
    <errorMessage>Formato: 00.000.000</errorMessage>
</ValidationRule>
