<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mercosul_formato_CUIT</fullName>
    <active>true</active>
    <description>Validação do formato do CUIT</description>
    <errorConditionFormula>!REGEX( CUIT__c , &quot;^([0-9]{2}[\\-][0-9]{8}[\\-][0-9]{1})?$&quot;)</errorConditionFormula>
    <errorDisplayField>CUIT__c</errorDisplayField>
    <errorMessage>Formato: 00-00000000-0</errorMessage>
</ValidationRule>
